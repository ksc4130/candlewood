{
  "extends": "eslint:recommended",
  "env": { "es6": true, "node": true },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
    "jsx": false
    }
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-undef": ["error"],
    "no-unused-vars": ["error"],
    "no-console": 0
  }
}
